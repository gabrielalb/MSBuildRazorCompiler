<?xml version="1.0" encoding="utf-8"?>
<package xmlns="http://schemas.microsoft.com/packaging/2012/06/nuspec.xsd">
  <metadata>
    <id>MSBuildRazorCompiler.Lib</id>
    <version>0.3.1.3</version>
    <authors>Robert Moore, Matt Davies, MRCollective, Gabriel Alb</authors>
    <description>MSBuild target to statically compile .cshtml files on build of your project and then provide the code to render them at runtime.</description>
    <dependencies>
      <group targetFramework="net6.0">
        <dependency id="RazorLight" version="2.0.0-rc.4" />
        <dependency id="ILRepack.Lib.MSBuild.Task" version="2.0.18.2" />
        <dependency id="Microsoft.AspNetCore.Mvc.Razor.Extensions" version="6.0.0" />
        <dependency id="Microsoft.AspNetCore.Razor.Language" version="6.0.0" />
      </group>
    </dependencies>
  </metadata>
  <files>
    <file src="..\RazorRenderer\bin\Release\net6.0\*.*" target="lib/net6.0/" />
    <file src="MSBuildRazorCompiler.targets" target="build/net6.0/MSBuildRazorCompiler.targets" />

    <file src="CompileRazorFiles.targets" target="tools/" />
    <file src="..\MSBuildRazorCompiler\bin\Release\net6.0\**\*" target="tools/net6.0/" />
  </files>
</package>